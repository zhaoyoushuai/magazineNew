/**index.wxss**/

.nav{
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
}

.recommend{
  margin-top: 110rpx;
  display: block;
}


.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.add{
  margin-right: 20rpx;
}
.to-catalog{
  display:inline-block;
  border: 1px solid #000;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}

.loading-container{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100vh;
  background-color: #fff;
}
.loading{
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -30rpx;
  margin-left: -30rpx;
}