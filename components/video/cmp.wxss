/* components/video/cmp.wxss */

.container{
    width: 100%;
}
.video{
    width: 100%;
    height: 400rpx;
}
.poster-container{
    position: relative;
    width: 100%;
    height: 400rpx;
}
.poster{
    width: 100%;
    height: 100%;
}
.controler{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -50rpx;
    margin-left: -50rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 50%;
    width: 100rpx;
    height: 100rpx;
    background: rgba(0, 0, 0, .6);
}
.play-btn{
    margin-top: 20rpx;
    width: 30rpx;
    height: 30rpx;
}
.duration{
    font-size: 24rpx;
    color: #fff;
}
.main-title{
    font-size: 40rpx;
    padding: 20rpx;
}
.mask{
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 750rpx;
    height: 1334rpx;
    background-color: rgba(0, 0, 0, .6)
}